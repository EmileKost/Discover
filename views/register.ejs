              <path id="Icon_map-health" data-name="Icon map-health" d="M28.53,9.99a.581.581,0,0,0-.579-.579H20.419a.581.581,0,0,1-.579-.579V1.3A.581.581,0,0,0,19.26.72H9.99a.581.581,0,0,0-.579.579V8.831a.581.581,0,0,1-.579.579H1.3A.581.581,0,0,0,.72,9.99v9.27a.581.581,0,0,0,.579.579H8.831a.581.581,0,0,1,.579.579v7.532a.581.581,0,0,0,.579.579h9.27a.581.581,0,0,0,.579-.579V20.419a.581.581,0,0,1,.579-.579h7.532a.581.581,0,0,0,.579-.579Z" transform="translate(1051.375 805.375)" fill="#fefefe"/>
